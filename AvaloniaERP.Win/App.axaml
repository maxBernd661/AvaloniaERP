<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AvaloniaERP.Win.App"
             xmlns:local="using:AvaloniaERP.Win"
             xmlns:vm="clr-namespace:AvaloniaERP.Win.ViewModels"
             xmlns:views="clr-namespace:AvaloniaERP.Win.Views"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <DataTemplate DataType="{x:Type vm:ProductListViewModel}">
            <views:ProductListView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:CustomerListViewModel}">
            <views:CustomerListView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:OrderListViewModel}">
            <views:OrderListView/>
        </DataTemplate>

    </Application.DataTemplates>
  
     <Application.Styles>
         <RomzetronTheme ColorTheme="DeepOrange" />
     </Application.Styles>
</Application>