<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaERP.Win.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:base="clr-namespace:AvaloniaERP.Win.ViewModels.Base"
        mc:Ignorable="d"
        d:DesignWidth="1100"
        d:DesignHeight="700"
        x:Class="AvaloniaERP.Win.Views.MainWindow"
        x:DataType="base:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="AvaloniaERP.Win">

    <Window.Styles>
        <Style Selector="TextBox, ComboBox, DatePicker">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="MinHeight" Value="32"/>
        </Style>

        <Style Selector="TextBlock.field-label">
            <Setter Property="Margin" Value="0,4,0,4"/>
            <Setter Property="Opacity" Value="0.85"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style Selector="Button.primary">
            <Setter Property="MinWidth" Value="110"/>
        </Style>

        <Style Selector="Button">
            <Setter Property="MinHeight" Value="34"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*">



        <!-- Top bar -->
        <Border Grid.Row="0"
                Padding="12"
                BorderThickness="0,0,0,1"
                BorderBrush="{DynamicResource ThemeBorderLowBrush}"
                IsVisible="True">
            <DockPanel LastChildFill="True">
                    <TextBlock Text="AvaloniaERP" FontSize="18" FontWeight="SemiBold" Margin="0,5,10,0"/>
            </DockPanel>
        </Border>

        <!-- Body -->
        <Grid Grid.Row="1" ColumnDefinitions="120,*">

            <!-- Navigation -->
            <Border BorderThickness="0,0,1,0"
                    BorderBrush="{DynamicResource ThemeBorderLowBrush}">
                <DockPanel Margin="12" LastChildFill="True">
                    <TextBlock DockPanel.Dock="Top"
                               Text="Navigation"
                               FontWeight="SemiBold"
                               Margin="0,10,0,8"/>

                    <StackPanel Spacing="8">

                       <Button Classes="primary" Content="Home" Command="{Binding ShowHomeCommand}"/>
                        
                        <Separator Margin="0,8"/>
                        
                       <Button Classes="primary" Content="Products"
                                Command="{Binding ShowProductsCommand}"/>

                       <Button Classes="primary" Content="Customers"
                                Command="{Binding ShowCustomersCommand}"/>

                       <Button Classes="primary" Content="Orders"
                                Command="{Binding ShowOrdersCommand}"/>
                       <Button Classes="primary" Content="Cart" IsEnabled="False"/>


                    </StackPanel>

                    <Border DockPanel.Dock="Bottom"
                            Padding="8"
                            Margin="0,12,0,0"
                            Background="{DynamicResource ThemeControlLowBrush}"
                            CornerRadius="6">
                    </Border>
                </DockPanel>
            </Border>

            <!-- Content area -->
            <Grid Grid.Column="1" Margin="12">

                <!-- Empty-state / welcome panel -->
                <Border Padding="24"
                        Background="{DynamicResource ThemeControlLowBrush}"
                        CornerRadius="12"
                        MaxWidth="650"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        IsVisible="{Binding HasNoCurrent}">
                    
                    <StackPanel Spacing="10">
                        <TextBlock Text="Welcome"
                                   FontSize="22"
                                   FontWeight="SemiBold"/>
                        <TextBlock Opacity="0.75" TextWrapping="Wrap">
                            Select a section from the navigation to begin.
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Actual routed content -->
                <ContentControl Content="{Binding Current}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                IsVisible="{Binding HasCurrent}"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
