<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaERP.Win.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:base="clr-namespace:AvaloniaERP.Win.ViewModels.Base"
        mc:Ignorable="d"
        d:DesignWidth="1100"
        d:DesignHeight="700"
        x:Class="AvaloniaERP.Win.Views.MainWindow"
        x:DataType="base:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="AvaloniaERP.Win">

    <Grid RowDefinitions="Auto,*">

        <!-- Top bar -->
        <Border Grid.Row="0"
                Padding="12"
                BorderThickness="0,0,0,1"
                BorderBrush="{DynamicResource ThemeBorderLowBrush}">
            <DockPanel LastChildFill="True">
                <StackPanel Orientation="Horizontal" Spacing="10" DockPanel.Dock="Left">
                    <TextBlock Text="AvaloniaERP" FontSize="18" FontWeight="SemiBold" Margin="0,5,10,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="8" DockPanel.Dock="Right">
                    <Button Content="Settings" IsEnabled="False"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Body -->
        <Grid Grid.Row="1" ColumnDefinitions="260,*">

            <!-- Navigation -->
            <Border BorderThickness="0,0,1,0"
                    BorderBrush="{DynamicResource ThemeBorderLowBrush}">
                <DockPanel Margin="12" LastChildFill="True">
                    <TextBlock DockPanel.Dock="Top"
                               Text="Navigation"
                               FontWeight="SemiBold"
                               Margin="0,10,0,8"/>

                    <StackPanel Spacing="8">

                        <Button Content="Home" IsEnabled="False"/>
                        
                        <Separator Margin="0,8"/>
                        
                        <Button Content="Products"
                                Command="{Binding ShowProductsCommand}"/>

                        <Button Content="Customers"
                                Command="{Binding ShowCustomersCommand}"/>

                        <Button Content="Orders"
                                Command="{Binding ShowOrdersCommand}"/>
                        <Button Content="Cart" IsEnabled="False"/>


                    </StackPanel>

                    <Border DockPanel.Dock="Bottom"
                            Padding="8"
                            Margin="0,12,0,0"
                            Background="{DynamicResource ThemeControlLowBrush}"
                            CornerRadius="6">
                    </Border>
                </DockPanel>
            </Border>

            <!-- Content area -->
            <Grid Grid.Column="1" Margin="12">

                <!-- Empty-state / welcome panel -->
                <Border Padding="24"
                        Background="{DynamicResource ThemeControlLowBrush}"
                        CornerRadius="12"
                        MaxWidth="650"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Welcome"
                                   FontSize="22"
                                   FontWeight="SemiBold"/>
                        <TextBlock Opacity="0.75" TextWrapping="Wrap">
                            Select a section from the navigation to begin.
                            The application will load the corresponding ListView into this area.
                        </TextBlock>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button Content="Go to Products"
                                    Command="{Binding ShowProducts}"/>
                            <Button Content="Learn more" IsEnabled="False"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Actual routed content -->
                <ContentControl Content="{Binding Current}"/>
            </Grid>

        </Grid>
    </Grid>
</Window>
