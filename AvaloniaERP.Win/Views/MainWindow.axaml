<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaERP.Win.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:base="clr-namespace:AvaloniaERP.Win.ViewModels.Base"
        mc:Ignorable="d"
        d:DesignWidth="1100"
        d:DesignHeight="700"
        x:Class="AvaloniaERP.Win.Views.MainWindow"
        x:DataType="base:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="AvaloniaERP.Win">

    <Window.Styles>

        <Style Selector="Button">
            <Setter Property="MinHeight" Value="34"/>
            <Setter Property="MinWidth" Value="110"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto ,* ,Auto">

        <!-- Top bar -->

        <StackPanel Grid.Row ="0">
                <TextBlock Text="AvaloniaERP" FontSize="18" FontWeight="SemiBold" Margin="12"/>
                <Separator/>
        </StackPanel>



        <!-- Body -->
        <Grid Grid.Row="1" ColumnDefinitions="120,*">

            <!-- Navigation -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                <DockPanel Margin="12" LastChildFill="True">
                    <TextBlock DockPanel.Dock="Top"
                               Text="Navigation"
                               FontWeight="SemiBold"
                               Margin="8"/>

                    <StackPanel Spacing="8">
                        <Button Content="Home" Command="{Binding ShowHomeCommand}"/>
                        <Separator/>
                        <Button Content="Products" Command="{Binding ShowProductsCommand}"/>
                        <Button Content="Customers" Command="{Binding ShowCustomersCommand}"/>

                        <Button Content="Orders" Command="{Binding ShowOrdersCommand}"/>

                    </StackPanel>

                </DockPanel>
                <Rectangle Width="1" Fill="DarkSlateGray" Opacity="10"/>

            </StackPanel>




            <!-- Content area -->
            <Grid Grid.Column="1" Margin="12">

                <!-- Empty-state / welcome panel -->
                <Border Padding="24" IsVisible="{Binding HasNoCurrent}">
                    
                    <StackPanel Spacing="10">
                        <TextBlock Text="Welcome"
                                   FontSize="22"
                                   FontWeight="SemiBold"/>
                        <TextBlock Opacity="0.75" TextWrapping="Wrap">
                            Select a section from the navigation to begin.
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Actual routed content -->
                <ContentControl Content="{Binding Current}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                IsVisible="{Binding HasCurrent}"/>
            </Grid>

        </Grid>

        <!--Bottom panel -->
        <StackPanel Grid.Row="2">
            <Separator Margin="8"/>
            <TextBlock Text="{Binding ErrorText}" FontSize="18" FontWeight="Regular" Opacity="70" Margin="8"/>
        </StackPanel>

    </Grid>
</Window>
