<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:AvaloniaERP.Win.ViewModels"
             xmlns:detail="clr-namespace:AvaloniaERP.Win.ViewModels.Detail"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="650"
             x:DataType="detail:ProductDetailViewModel"
             x:Class="AvaloniaERP.Win.Views.Detail.ProductDetailView">

    <UserControl.Styles>
        <Style Selector="TextBox, ComboBox, DatePicker">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="MinHeight" Value="32"/>
        </Style>

        <Style Selector="TextBlock.field-label">
            <Setter Property="Margin" Value="0,4,0,4"/>
            <Setter Property="Opacity" Value="0.85"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style Selector="Button.primary">
            <Setter Property="MinWidth" Value="110"/>
        </Style>

        <Style Selector="Button">
            <Setter Property="MinHeight" Value="34"/>
        </Style>
    </UserControl.Styles>


    <ScrollViewer>
        <Border Padding="18"
                CornerRadius="12"
                BorderThickness="1"
                BorderBrush="{DynamicResource ThemeBorderLowBrush}">
            <Grid RowDefinitions="Auto,Auto,Auto,Auto"
                  ColumnDefinitions="*,*"
                  ColumnSpacing="16"
                  RowSpacing="14">

              <Grid Grid.Row="0" Grid.ColumnSpan="2" ColumnDefinitions="*,Auto" RowDefinitions="Auto, Auto">
                  <StackPanel>
                      <TextBlock Text="Product" FontSize="20" FontWeight="SemiBold"/>
                  </StackPanel>

                  <StackPanel Grid.Row="0" Grid.Column ="1" Orientation="Horizontal" Spacing="10" VerticalAlignment="Top">
                      <Button Content="Save" Classes="primary" Command ="{Binding SaveCommand  }"/>
                      <Button Content ="Reset" Classes="primary" Command="{Binding ResetCommand}"/>
                      <Button Content ="Cancel" Classes="primary" Command="{Binding CancelCommand}"/>
                      <Button Content ="Exit" Classes="primary" Command="{Binding DeleteCommand}"/>
                  </StackPanel>
              </Grid>

                <Border Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Height="1" Background="{DynamicResource ThemeBorderLowBrush}" Margin="0,6,0,2"/>

                <StackPanel Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2">
                    <TextBlock Text="Common" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>

                    <TextBlock Text="Name" Classes="field-label"/>
                    <TextBox Text="{Binding Name, Mode=TwoWay} "/>

                    <TextBlock Text="Price per Unit" Classes="field-label"/>
                    <NumericUpDown Value="{Binding PricePerUnit, Mode=TwoWay}" Watermark="0.00"/>

                    <TextBlock Text="Weight" Classes="field-label"/>
                    <NumericUpDown Value="{Binding Weight, Mode=TwoWay}" Watermark="0.00"/>


                    <CheckBox Content="Is Available" Classes="field-label" IsChecked="{Binding IsAvailable, Mode=TwoWay}" Margin="0,10,0,10"/>
                </StackPanel>

                <Border Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Height="1" Background="{DynamicResource ThemeBorderLowBrush}" Margin="0,6,0,2"/>

                <StackPanel Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2">
                    <TextBlock Text="Additional Information" FontSize="14" FontWeight="Regular" Margin="0,0,0,8"/>

                    <TextBlock Text="Id" Classes="field-label"/>
                    <TextBox Text="{Binding EntityId, Mode=TwoWay}" IsReadOnly="true" Watermark="0000-0000000-000-00"/>

                    <TextBlock Text="Created at" Classes="field-label"/>
                    <TextBox Text="{Binding CreationTime, Mode=TwoWay}" IsReadOnly="true" Watermark="01.01.1970 - 00:00"/>

                    <TextBlock Text="Last Updated at" Classes="field-label"/>
                    <TextBox Text="{Binding UpdateTime, Mode=TwoWay}" IsReadOnly="true" Watermark="01.01.1970 - 00:00"/>

                </StackPanel>

          </Grid>
      </Border>


  </ScrollViewer>

</UserControl>
