<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:AvaloniaERP.Win.ViewModels"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:Class="AvaloniaERP.Win.Views.DashboardHomeView"
             x:DataType="vm:DashboardHomeViewModel">
    <StackPanel Spacing="12">
        <TextBlock Text="{Binding Title}" FontSize="24" FontWeight="SemiBold" />
        <TextBlock Text="{Binding Summary}" FontSize="14" Opacity="0.7" />
    </StackPanel>
</UserControl>
